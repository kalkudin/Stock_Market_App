<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/userProfileFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.finalproject.presentation.auth_feature.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_stockHomeFragment"
            app:destination="@id/stockHomeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.finalproject.presentation.auth_feature.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_stockHomeFragment"
            app:destination="@id/stockHomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.finalproject.presentation.auth_feature.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.finalproject.presentation.auth_feature.forgot_password.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_forgotPasswordFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/stockHomeFragment"
        android:name="com.example.finalproject.presentation.stock_feature.home.StockHomeFragment"
        android:label="StockHomeFragment" >

        <action
            android:id="@+id/action_stockHomeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_stockHomeFragment_to_companyDetailsFragment"
            app:destination="@id/companyDetailsFragment" >
            <argument
                android:name="symbol"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_stockHomeFragment_to_extensiveStocksToWatchFragment"
            app:destination="@id/extensiveStocksToWatchFragment" />
        <action
            android:id="@+id/action_stockHomeFragment_to_userFundsFragment"
            app:destination="@id/userFundsFragment" />
    </fragment>

    <fragment
        android:id="@+id/companyListFragment"
        android:name="com.example.finalproject.presentation.stock_feature.company_list.screen.company_list.CompanyListFragment"
        android:label="fragment_company_list"
        tools:layout="@layout/fragment_company_list" >
        <action
            android:id="@+id/action_companyListFragment_to_companyDetailsFragment"
            app:destination="@id/companyDetailsFragment">
            <argument
                android:name="symbol"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/companyDetailsFragment"
        android:name="com.example.finalproject.presentation.stock_feature.company_details.screen.CompanyDetailsFragment"
        android:label="fragment_company_details"
        tools:layout="@layout/fragment_company_details" >
        <action
            android:id="@+id/action_companyDetailsFragment_to_companyListFragment"
            app:destination="@id/companyListFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/extensiveStocksToWatchFragment"
        android:name="com.example.finalproject.presentation.stock_feature.ones_to_watch_extensive_list.ExtensiveStocksToWatchFragment"
        android:label="ExtensiveStocksToWatchFragment" >
        <action
            android:id="@+id/action_extensiveStocksToWatchFragment_to_stockHomeFragment"
            app:destination="@id/stockHomeFragment" />
        <argument
            android:name="type"
            app:argType="com.example.finalproject.presentation.stock_feature.home.model.Stock$PerformingType"
            android:defaultValue="BEST_PERFORMING" />
        <action
            android:id="@+id/action_extensiveStocksToWatchFragment_to_companyDetailsFragment"
            app:destination="@id/companyDetailsFragment" >
            <argument
                android:name="symbol"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/userFundsFragment"
        android:name="com.example.finalproject.presentation.stock_feature.funds.UserFundsFragment"
        android:label="UserFundsFragment" >
        <action
            android:id="@+id/action_userFundsFragment_to_stockHomeFragment"
            app:destination="@id/stockHomeFragment" />
        <argument
            android:name="creditCard"
            app:argType="com.example.finalproject.presentation.stock_feature.funds.model.CreditCard" />
        <action
            android:id="@+id/action_userFundsFragment_to_addNewCardBottomSheetFragment"
            app:destination="@id/addNewCardBottomSheetFragment" />
        <action
            android:id="@+id/action_userFundsFragment_to_userCreditCardsBottomSheetFragment"
            app:destination="@id/userCreditCardsBottomSheetFragment" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.finalproject.presentation.profile_feature.screens.user_profile.UserProfileFragment"
        android:label="UserProfileFragment" >
        <action
            android:id="@+id/action_userProfileFragment_to_favoriteStocksFragment"
            app:destination="@id/favoriteStocksFragment" />
        <action
            android:id="@+id/action_userProfileFragment_to_transactionFragment"
            app:destination="@id/transactionFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoriteStocksFragment"
        android:name="com.example.finalproject.presentation.profile_feature.screens.favorites.FavoriteStocksFragment"
        android:label="FavoriteStocksFragment" >
        <action
            android:id="@+id/action_favoriteStocksFragment_to_companyDetailsFragment"
            app:destination="@id/companyDetailsFragment">
            <argument
                android:name="symbol"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_favoriteStocksFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>

    <dialog
        android:id="@+id/addNewCardBottomSheetFragment"
        android:name="com.example.finalproject.presentation.stock_feature.funds.bottom_sheets.new_card.AddNewCardBottomSheetFragment"
        android:label="AddNewCardBottomSheetFragment" >
        <action
            android:id="@+id/action_addNewCardBottomSheetFragment_to_userFundsFragment"
            app:destination="@id/userFundsFragment" />
    </dialog>

    <dialog
        android:id="@+id/userCreditCardsBottomSheetFragment"
        android:name="com.example.finalproject.presentation.stock_feature.funds.bottom_sheets.existing_cards.UserCreditCardsBottomSheetFragment"
        android:label="UserCreditCardsBottomSheetFragment" >
        <action
            android:id="@+id/action_userCreditCardsBottomSheetFragment_to_userFundsFragment"
            app:destination="@id/userFundsFragment" />
    </dialog>
    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.example.finalproject.presentation.profile_feature.screens.transactions.TransactionFragment"
        android:label="TransactionFragment" >
        <action
            android:id="@+id/action_transactionFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
</navigation>