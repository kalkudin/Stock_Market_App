<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@drawable/style_company_list"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCompanySymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Symbol"
        android:textColor="@color/sky_blue"
        android:textSize="23sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sauce_sans_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textColor="@color/sky_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sauce_sans_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCompanySymbol" />

</androidx.constraintlayout.widget.ConstraintLayout>